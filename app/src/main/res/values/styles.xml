<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="creation_type">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1.2</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingLeft">@dimen/_10sdp</item>
        <item name="android:textColor">#FF7C00</item>
        <item name="android:textSize">@dimen/_17sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_count">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:background">#FFDC00</item>
    </style>

    <style name="char_name">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">7</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingLeft">@dimen/_10sdp</item>
        <item name="android:textColor">#FF7C00</item>
        <item name="android:textSize">@dimen/_17ssp</item>
    </style>


    <style name="hor_line">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">4</item>
        <item name="android:layout_height">@dimen/_2sdp</item>
        <item name="android:layout_marginRight">@dimen/_20sdp</item>
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:background">#FF7C00</item>
    </style>

    <style name="lin_block">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="button_down">
        <item name="android:layout_width">@dimen/_150sdp</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:textSize">@dimen/_17sdp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="action_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/_5sdp</item>
    </style>

</resources>
